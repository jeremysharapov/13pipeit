#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

int main(){
  int fds[2];
  pipe(fds);
  
  if (fork() == 0) {
    close(fds[READ]);
    char s[10] = "helli!";
    write(fds[WRITE], s, sizeof(s));
  } else {
    close(fds[WRITE]);
    char s[10];
    read(fds[READ], s, sizeof(s));
    printf("parent received: [%s]\n", s);
  }
}
